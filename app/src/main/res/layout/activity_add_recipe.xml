<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameImagen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#DDDDDD"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/imgReceta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen receta" />

            <TextView
                android:id="@+id/txtAddImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Añadir imagen"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#666" />
        </FrameLayout>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la receta"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/editTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiempo total de la receta (minutos)"
            android:inputType="number"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@drawable/bg_edittext"
            android:textColor="#000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/containerIngredientes"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAñadirIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir ingrediente"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasos"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/containerPasos"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnAñadirPaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir paso"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:elevation="4dp"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar receta"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:elevation="6dp"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</ScrollView>
